{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "schedule:daily", "group:allNonMajor"],
  "labels": ["dependencies"],
  "reviewersFromCodeOwners": true,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "groupName": "typescript-eslint",
      "matchDepTypes": ["devDependencies"],
      "matchPackagePrefixes": ["@typescript-eslint/"]
    },
    {
      "groupName": "doc-dependencies",
      "matchPackagePrefixes": [
        "typedoc",
        "typedoc-plugin-missing-exports",
        "vitepress"
      ]
    },
    {
      "groupName": "vitest",
      "matchDepTypes": ["devDependencies"],
      "matchPackagePrefixes": ["@vitest/ui", "vitest"]
    },
    {
      "groupName": "typescript",
      "matchDepTypes": ["devDependencies"],
      "matchPackagePrefixes": ["typescript"]
    },
    {
      "groupName": "prettier",
      "matchDepTypes": ["devDependencies"],
      "matchPackagePrefixes": ["prettier", "@types/prettier"]
    },
    {
      "groupName": "node",
      "matchPackagePrefixes": ["@types/node", "node", "npm"],
      "rangeStrategy": "bump"
    },
    {
      "groupName": "dependencies",
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "replace"
    },
    {
      "groupName": "devDependencies",
      "matchDepTypes": ["devDependencies"],
      "rangeStrategy": "bump"
    },
    {
      "groupName": "peerDependencies",
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assignees": ["team:maintainers"]
  }
}
