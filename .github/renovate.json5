{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "schedule:daily", "group:allNonMajor"],
  "labels": ["dependencies"],
  "reviewersFromCodeOwners": true,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "groupName": "typescript-eslint",
      "matchPackagePrefixes": ["@typescript-eslint/"]
    },
    {
      "groupName": "doc-dependencies",
      "matchPackagePrefixes": [
        "typedoc",
        "typedoc-plugin-missing-exports",
        "vitepress"
      ]
    },
    {
      "groupName": "vitest",
      "matchPackagePrefixes": ["@vitest/ui", "vitest"]
    },
    {
      "groupName": "typescript",
      "matchPackagePrefixes": ["typescript"]
    },
    {
      "groupName": "prettier",
      "matchPackagePrefixes": ["prettier"]
    }
  ],
  "ignoreDeps": [
    // manually bumping
    "@types/node",
    "node",
    "npm"
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assignees": ["team:maintainers"]
  }
}
